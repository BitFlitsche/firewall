# Firewall Configuration Example
# Copy this file to config.yaml and modify as needed

server:
  port: 8081
  host: "0.0.0.0"
  read_timeout: "30s"
  write_timeout: "30s"
  idle_timeout: "60s"
  mode: "debug"

database:
  host: "127.0.0.1"
  port: 3306
  user: "user"
  password: "password"
  name: "firewall"
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: "5m"
  conn_max_idle_time: "1m"
  ssl_mode: "false"
  charset: "utf8mb4"
  parse_time: true
  loc: "Local"

elastic:
  hosts:
    - "http://localhost:9200"
  username: ""
  password: ""
  timeout: "30s"
  index: "firewall"

redis:
  host: "localhost"
  port: 6379
  password: ""
  db: 0
  timeout: "5s"

# Distributed Locking Configuration
locking:
  # Set to true to enable distributed locking for multi-instance deployments
  # Set to false for single-instance deployments (no Redis required)
  enabled: false
  
  # Default lock TTL (used for custom locks)
  lock_ttl: "5m"
  
  # TTL for incremental sync locks
  incremental_ttl: "5m"
  
  # TTL for full sync locks (longer due to full sync duration)
  full_sync_ttl: "30m"
  
  # How often to cleanup expired locks
  cleanup_interval: "10m"

logging:
  level: "info"
  format: "json"
  output: "stdout"
  max_size: 100
  max_backups: 3
  max_age: 28
  compress: true

security:
  cors_enabled: true
  cors_origins:
    - "http://localhost:3000"
  cors_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  cors_headers:
    - "Content-Type"
    - "Authorization"
  rate_limit: 1000
  rate_limit_window: "1m" 